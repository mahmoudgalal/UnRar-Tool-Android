<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#afafaf"
    android:orientation="vertical"
    android:padding="3dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/archivedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_default"
        android:clickable="true"
        android:lines="8"
        android:maxLines="5"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:paddingBottom="4dp"

        android:scrollbars="vertical"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/testcompress" />

    <TextView
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|left"
        android:text="1-Choose a Rar file:"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/archive_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0000"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:hint="Open Archive:"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="2dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textStyle="italic" />

        <Button
            android:id="@+id/openFile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:layout_gravity="center_horizontal"

            android:text=" ... "
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2- Choose Extraction path:"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/extractionpath"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#666666"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:hint=" Extract to:"
            android:padding="2dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textStyle="italic" />

        <Button
            android:id="@+id/extract_to_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" ... "
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unrar_indexed"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/unRarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"

        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:text="@string/unrar"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/progress_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#aa0000"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="         "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#faffff"
        android:textSize="15sp" />

</androidx.appcompat.widget.LinearLayoutCompat>